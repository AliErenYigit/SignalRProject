@model List<ResultContactDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<style>
	.text-truncate {
		white-space: nowrap;
		overflow: hidden;
		text-overflow: ellipsis;
		max-width: 150px; /* Bu değeri ihtiyacına göre ayarlayabilirsin */
	}
</style>



<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ana Sayfa Alt İletişim Bilgi İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">

				<div class="card">
					<div class="card-header">
						<div class="card-title">İLetişim Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							İletişim alanı ile ilgili işlemleri aşağıdan gerçekleştirebilirsiniz.
						    Bir adet oluşturunuz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>

									<th scope="col">Konum</th>
									<th scope="col">Telefon</th>
									<th scope="col">Mail</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>

										<td class ="text-truncate">@item.Location</td>
										<td>@item.PhoneNumber</td>
										<td>@item.Mail</td>
										<td>@item.FooterDescription</td>
										<td><a href="/Contact/DeleteContact/@item.ContactID" class="btn btn-outline-danger">Sil</a></td>
										<td><a href="/Contact/UpdateContact/@item.ContactID" class="btn btn-outline-success">Güncelle</a></td>

									</tr>
								}

							</tbody>
						</table>
						<a href="/Contact/CreateContact/" class="btn btn-outline-primary">Yeni İletişim Girişi</a>
					</div>
				</div>


			</div>

		</div>
	</div>
</div>

